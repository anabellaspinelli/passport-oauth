<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <title>Login</title>
  <style>
    body {
      font-family: arial;
      margin: 0;
    }

    nav {
      background: #ff5353;
      padding: 20px 10px;
    }

    nav ul {
      max-width: 960px;
      margin: 0 auto;
      padding: 0;
    }

    nav li {
      list-style-type: none;
      display: inline-block;
      margin: 0 10px 0 0;
    }

    nav a {
      color: #fff;
      font-size: 18px;
      background: rgba(255, 255, 255, 0.2);
      text-decoration: none;
      padding: 10px;
      display: block;
    }

    main,
    header {
      max-width: 960px;
      margin: 30px auto;
      padding: 0 30px;
      color: #333;
    }

    .typeform-btn {
      color: #fff;
      text-decoration: none;
      font-size: 18px;
      padding: 10px;
      background: #ff5353;
      margin: 10px 0;
      display: inline-block;
      border: none
    }

    form>div {
      margin-bottom: 30px;
    }
  </style>
</head>

<body>
  <nav>
    <ul>
      <li>
        <a href="/">Home</a>
      </li>
    </ul>
  </nav>
  <header>
    <h1>Select the scopes and log in:</h1>
  </header>
  <main>
    <form action="/auth/typeform" method="get">
      <% scopes.forEach(function(scope) { %>
        <div>
          <h2>
            <%= scope %>
          </h2>
          <input type="checkbox" name="<%= scope %>:read"></input>
          <label for="<%= scope %>:read">read</label>

          <input type="checkbox" name="<%= scope %>:write"></input>
          <label for="<%= scope %>:write">write</label>
        </div>
        <% }); %>
